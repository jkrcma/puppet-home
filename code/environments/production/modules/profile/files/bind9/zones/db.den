; .den local TLD
;
$TTL	300
@	IN	SOA	ns1.den. admin.den. (
		     2022091001		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
