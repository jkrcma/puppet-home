;
; .den local TLD
;
$TTL	300
@	IN	SOA	ns.den. admin.den. (
		     2021032624		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
; nameserver NS
@	IN	NS	ns.den.

$ORIGIN den.

